<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    tools:ignore="ExtraText"
    android:background="@color/TertiaryColor">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="144dp"
        android:layout_height="210dp"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logopersib" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:text="REGISTER"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsbold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/txt_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txt_1"
        android:padding="5dp"
        android:id="@+id/LY1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:hint="Create Username"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/SecondaryColor"
            android:id="@+id/usernameregister"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Email"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/SecondaryColor"
            android:id="@+id/emailregister"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="10dp"
            android:hint="Enter Your NIK"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/SecondaryColor"
            android:id="@+id/nikregister"
            android:fontFamily="@font/poppinsregular"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="10dp"
            android:hint="CreatePassword"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/SecondaryColor"
            android:id="@+id/passwordregister"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_shape"
            android:layout_marginTop="10dp"
            android:hint="ConfPassword"
            android:paddingLeft="5dp"
            android:backgroundTint="@color/SecondaryColor"
            android:id="@+id/confpasswordregister"
            android:fontFamily="@font/poppinsregular"/>



    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LY1"
        android:width="300dp"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/registerregister"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/registerregister"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/PrimaryColor"
            android:textSize="12sp"
            android:id="@+id/loginregister"/>
    </LinearLayout>


</RelativeLayout>